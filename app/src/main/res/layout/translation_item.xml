<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
	>

	<TextView
		android:id="@+id/translation_word"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_navigate_next_white_24dp"
		android:drawablePadding="10dp"
		android:padding="10dp"
		android:textColor="@color/colorWhite"
		android:background="@color/colorWorkspace"
		android:textSize="22dp" />
	<TextView
		android:id="@+id/translation_phonetic"
		android:drawableLeft="@drawable/ic_surround_sound_white_24dp"
		android:drawablePadding="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorWhite"
		android:background="@color/colorWorkspaceHighlight"
		android:padding="10dp"
		android:textStyle="bold"
		android:textSize="20dp" />
	<TextView
		android:id="@+id/translation_definition"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorWhite"
		android:background="@color/colorWorkspaceHighlight"
		android:padding="10dp"
		android:textSize="18dp" />

</LinearLayout>
